---
// src/components/hero/HeroTitle.astro
import CTAButtons from "./CTAButtons.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const jobTitle = t("hero.jobTitle") as string;
const jobTitleChars = jobTitle.split("");
---

<div class="flex flex-col items-center justify-center min-h-screen">
  <h1
    class="text-4xl md:text-6xl lg:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600 mb-4 animate-fade-down animate-duration-800"
  >
    Ryan PINA-SILASSE
  </h1>
  <h2
    class="flex flex-wrap justify-center text-2xl md:text-3xl text-white tracking-tight"
  >
    {jobTitleChars.map((char: string, i: number) => (
      <span
        class="inline-block animate-fade-up"
        style={`animation-delay: ${50 + i * 50}ms`}
      >
        {char === " " ? "\u00A0" : char}
      </span>
    ))}
  </h2>
  <h3
    class="text-lg md:text-xl text-white tracking-tight flex items-center space-x-2 mt-4"
  >
    <span
      class="inline-block animate-fade-right animate-delay-[900ms] animate-duration-500"
      >{t("hero.tagline.needs")}</span
    >
    <span
      class="inline-block animate-fade-right animate-delay-[1100ms] animate-duration-500 text-cyan-400"
      >{`→`}</span
    >
    <span
      class="inline-block animate-fade-right animate-delay-[1300ms] animate-duration-500"
      >{t("hero.tagline.challenges")}</span
    >
    <span
      class="inline-block animate-fade-right animate-delay-[1500ms] animate-duration-500 text-cyan-400"
      >{`→`}</span
    >
    <span
      class="inline-block animate-fade-right animate-delay-[1700ms] animate-duration-500"
      >{t("hero.tagline.solutions")}</span
    >
  </h3>
  
  <!-- Tech Stack Badges -->
  <div class="flex flex-wrap justify-center items-center gap-3 mt-8 md:mt-10">
    <span
      class="px-4 py-2 text-sm md:text-base font-medium rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 hover:border-white/30 transition-all duration-300 animate-fade-up animate-delay-[1900ms] animate-duration-600"
    >
      React
    </span>
    <span
      class="px-4 py-2 text-sm md:text-base font-medium rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 hover:border-white/30 transition-all duration-300 animate-fade-up animate-delay-[2100ms] animate-duration-600"
    >
      Next.js
    </span>
    <span
      class="px-4 py-2 text-sm md:text-base font-medium rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 hover:border-white/30 transition-all duration-300 animate-fade-up animate-delay-[2300ms] animate-duration-600"
    >
      Expo
    </span>
    <span
      class="px-4 py-2 text-sm md:text-base font-medium rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 hover:border-white/30 transition-all duration-300 animate-fade-up animate-delay-[2500ms] animate-duration-600"
    >
      Go
    </span>
    <span
      class="px-4 py-2 text-sm md:text-base font-medium rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 hover:border-white/30 transition-all duration-300 animate-fade-up animate-delay-[2700ms] animate-duration-600"
    >
      TypeScript
    </span>
  </div>
  
  <CTAButtons />
</div>

    <span class="inline-block animate-fade-up animate-delay-[100ms]">o</span>
    <span class="inline-block animate-fade-up animate-delay-[150ms]">f</span>
    <span class="inline-block animate-fade-up animate-delay-[200ms]">t</span>
    <span class="inline-block animate-fade-up animate-delay-[250ms]">w</span>
    <span class="inline-block animate-fade-up animate-delay-[300ms]">a</span>
    <span class="inline-block animate-fade-up animate-delay-[350ms]">r</span>
    <span class="inline-block animate-fade-up animate-delay-[400ms]">e</span>
    <span class="inline-block animate-fade-up animate-delay-[450ms]"
      >&nbsp;</span
    >
    <span class="inline-block animate-fade-up animate-delay-[500ms]">E</span>
    <span class="inline-block animate-fade-up animate-delay-[550ms]">n</span>
    <span class="inline-block animate-fade-up animate-delay-[600ms]">g</span>
    <span class="inline-block animate-fade-up animate-delay-[650ms]">i</span>
    <span class="inline-block animate-fade-up animate-delay-[700ms]">n</span>
    <span class="inline-block animate-fade-up animate-delay-[750ms]">e</span>

---
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import { NAVIGATION_ITEMS } from '@utils/constants';
import LanguageSwitcher from './LanguageSwitcher.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
        Ryan Pina
      </a>

      <!-- Navigation Desktop -->
      <ul class="hidden md:flex items-center space-x-8">
        {NAVIGATION_ITEMS.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-700 hover:text-blue-600 transition-colors font-medium"
            >
              {t(item.key)}
            </a>
          </li>
        ))}
      </ul>

      <!-- Language Switcher & Mobile Menu -->
      <div class="flex items-center space-x-4">
        <LanguageSwitcher />
        
        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <ul class="space-y-2">
        {NAVIGATION_ITEMS.map((item) => (
          <li>
            <a
              href={item.href}
              class="block py-2 px-4 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors"
            >
              {t(item.key)}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>

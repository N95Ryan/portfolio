---
import { useTranslations } from "@i18n/utils";
import type { Lang } from "@types/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="mt-12 w-full max-w-5xl mx-auto">
  <h2 class="text-3xl sm:text-4xl font-bold text-white mb-8 text-center">
    {t("about.whatIDo.title")}
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Frontend & Web -->
    <div
      class="bg-gradient-to-br from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 p-6 rounded-lg shadow-xl hover:shadow-2xl transition-all duration-500 ease-out hover:scale-105 backdrop-blur-sm"
      style="box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(99, 102, 241, 0.1);"
    >
      <h3
        class="text-xl font-semibold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-3"
      >
        {t("about.whatIDo.frontend.title")}
      </h3>
      <p class="text-gray-300 text-sm leading-relaxed mb-3">
        {t("about.whatIDo.frontend.description")}
      </p>
    </div>

    <!-- Backend & APIs -->
    <div
      class="bg-gradient-to-br from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 p-6 rounded-lg shadow-xl hover:shadow-2xl transition-all duration-500 ease-out hover:scale-105 backdrop-blur-sm"
      style="box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(99, 102, 241, 0.1);"
    >
      <h3
        class="text-xl font-semibold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-3"
      >
        {t("about.whatIDo.backend.title")}
      </h3>
      <p class="text-gray-300 text-sm leading-relaxed mb-3">
        {t("about.whatIDo.backend.description")}
      </p>
    </div>

    <!-- Mobile Development -->
    <div
      class="bg-gradient-to-br from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 p-6 rounded-lg shadow-xl hover:shadow-2xl transition-all duration-500 ease-out hover:scale-105 backdrop-blur-sm"
      style="box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(99, 102, 241, 0.1);"
    >
      <h3
        class="text-xl font-semibold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-3"
      >
        {t("about.whatIDo.mobile.title")}
      </h3>
      <p class="text-gray-300 text-sm leading-relaxed mb-3">
        {t("about.whatIDo.mobile.description")}
      </p>
    </div>

    <!-- Testing & Quality -->
    <div
      class="bg-gradient-to-br from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 p-6 rounded-lg shadow-xl hover:shadow-2xl transition-all duration-500 ease-out hover:scale-105 backdrop-blur-sm"
      style="box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(99, 102, 241, 0.1);"
    >
      <h3
        class="text-xl font-semibold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-3"
      >
        {t("about.whatIDo.testing.title")}
      </h3>
      <p class="text-gray-300 text-sm leading-relaxed mb-3">
        {t("about.whatIDo.testing.description")}
      </p>
    </div>
  </div>
</div>

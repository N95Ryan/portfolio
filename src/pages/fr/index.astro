---
import MainLayout from '@layouts/MainLayout.astro';
import Container from '@components/common/Container.astro';

const title = 'Ryan Pina - Développeur Full Stack';
const description = 'Développeur Full Stack spécialisé en React, Next.js, TypeScript et Go';
---

<MainLayout title={title} description={description}>
  <Container className="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
        Ryan Pina
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8 animate-slide-in-up">
        Développeur Full Stack
      </p>
      <div class="flex justify-center space-x-4 animate-slide-in-up">
        <a
          href="#contact"
          class="px-8 py-4 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors"
        >
          Me contacter
        </a>
        <a
          href="#projects"
          class="px-8 py-4 border-2 border-blue-600 text-blue-600 rounded-lg font-medium hover:bg-blue-600 hover:text-white transition-all"
        >
          Voir les projets
        </a>
      </div>
    </div>
  </Container>
</MainLayout>

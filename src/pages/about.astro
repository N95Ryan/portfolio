---
import MainLayout from "@layouts/MainLayout.astro";
import BackgroundAnimation from "@components/ui/BackgroundAnimation.astro";
import AboutPicture from "@components/about/AboutPicture.astro";
import AboutInfos from "@components/about/AboutInfos.astro";
import WhatIDo from "@components/about/WhatIDo.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const title = "About - Ryan PINA-SILASSE";
const description =
  "25-year-old Software Engineer based in Drummondville, Quebec. 5 years of experience in web development. Currently working at Midbec, seeking opportunities in Toronto. Specialized in React and Go.";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={title} description={description}>
  <BackgroundAnimation />
  <div class="flex flex-col min-h-screen py-16 px-4">
    <div id="about" class="max-w-5xl mx-auto w-full">
      <h3 class="text-5xl font-semibold text-indigo-500 text-center">
        {t("about.title")}
      </h3>
      <hr class="my-8 border-t border-indigo-700 w-1/2 mx-auto" />
    </div>

    <div
      class="flex flex-col sm:flex-row items-center justify-center w-full mb-8"
    >
      <AboutPicture />
      <div class="flex flex-col md:w-1/2 mx-6">
        <AboutInfos lang={lang} />
      </div>
    </div>

    <WhatIDo lang={lang} />
  </div>
</MainLayout>
